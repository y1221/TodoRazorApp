@page
@model TodoRazorApp.Pages.Todos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="content-area">
    <h1>タスク詳細</h1>

    <div class="main-container-border">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Todo.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Todo.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Todo.Category.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Todo.Category.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Todo.DueDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Todo.DueDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Todo.Memo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Todo.Memo)
                </dd>
                <dt class="col-sm-2">
                    作成者
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Todo.Account.Name)
                </dd>
            </dl>
        </div>
        <div class="align-center">
            <a asp-page="./Edit" asp-route-id="@Model.Todo.Id">
                <input type="submit" value="編集" />
            </a>
        </div>
    </div>

    <div class ="align-center">
        <a asp-page="./Index">トップ画面に戻る</a>
    </div>
</div>
