@page
@model TodoRazorApp.Pages.Accounts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>ログイン</h1>

<p class="err-msg">@ViewData["ErrorMsg"]</p>

<form method="post">
    <div class="form-group">
        <label asp-for="Account.Mail" class="control-label"></label>
        <input asp-for="Account.Mail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Account.Password" class="control-label"></label>
        <input asp-for="Account.Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="ログイン" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-page="Create">会員登録はこちら</a>
</p>
